citHeader("To cite RtD3 in publications use:")

citEntry(entry = "Article",
  title        = "RtD3: Rt Visualization in D3",
  author       = personList(as.person("Hamish Gibbs")),
  journal      = "-",
  year         = "2020",
  volume       = "-",
  number       = "-",
  pages        = "-",
  doi          = "10.5281/zenodo.3957539",

  textVersion  =
  paste("Hamish Gibbs (2020).",
        "RtD3: Rt Visualization in D3, ",
        "DOI: 10.5281/zenodo.3957539")
)
